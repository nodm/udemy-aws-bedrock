{
  "name": "node-ts-starter",
  "version": "1.0.0",
  "description": "A starter for the Node.js project with TypeScript and pnpm",
  "packageManager": "pnpm@10.9.0",
  "main": "build/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/nodm/node-ts-starter.git"
  },
  "scripts": {
    "start": "node build/index.js",
    "dev": "tsx src/index.ts",
    "dev:watch": "tsx watch src/index.ts",
    "build": "pnpm compile",
    "test": "pnpm jest",
    "lint": "gts lint",
    "clean": "gts clean",
    "compile": "tsc",
    "fix": "gts fix",
    "prepare": "pnpm compile",
    "pretest": "pnpm compile",
    "posttest": "pnpm lint"
  },
  "keywords": [
    "Node.js",
    "TypeScript",
    "pnpm"
  ],
  "author": "nodm",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.1",
    "gts": "^6.0.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.2",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "dotenv": "^16.5.0"
  }
}
